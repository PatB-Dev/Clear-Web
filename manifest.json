{
    "manifest_version": 2,
    "name": "Clear web",
    "version": "1.0",
    "description": "Clear web",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "sketch/front.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "sketch/back.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icons/Pat PB.png",
        "default_popup": "sketch/popup.html",
        "default_title": "Clear web",
        "browser_style": true
    },
    "web_accessible_resources": [
        "sketch/popup.html"
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}